@model QuanLyKho.Models.Entities.Category
@using QuanLyKho.Models.Entities;
@{
    ViewData["Title"] = "Edit";

    var selectedValues = ViewData["SelectedValues"] as List<int>;
}

@section Styles {
    <link rel="stylesheet"
          type="text/css"
          href="https://unpkg.com/file-upload-with-preview/dist/style.css" />

    <style>
        .holder {
            height: 100px;
            width: 100px;
            border: 2px solid #777;
            display: inline-block;
        }

        .imgPreview {
            height: 100%;
            width: 100%
        }

    </style>
}


<section class="content">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Icon" />
        <input type="hidden" asp-for="CreatedTime" />
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Update category</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>  
                    <div class="card-body" style="display: block;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Id" type="hidden" />
                        <div class="form-group">
                            <label asp-for="Name">Category Name</label>
                            <input asp-for="Name" type="text" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Configurations</label>
                            <select id="select-category" class="w-100" name="configs" multiple>
                                <option disabled>Select configurations</option>
                                @foreach (var config in ViewBag.Configurations!)
                                {
                                    if (selectedValues?.Contains(config.Id))
                                    {
                                        <option value="@config.Id" selected>@config.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@config.Id">@config.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Upload</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="iconFile" id="iconFile" accept=".png">
                                <label class="custom-file-label" for="inputImages">Choose file</label>
                            </div>
                        </div>
                        <div class="gallery"></div>
                        <div class="form-group">
                            <label asp-for="Description">Category Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status">Status</label>
                            <select asp-for="Status" class="form-control custom-select">
                                <option selected="" disabled="">Select one</option>
                                @foreach (Status status in Enum.GetValues(typeof(Status)))
                                {
                                    <option value="@status">@status.ToString()</option>
                                }
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Update Category" class="btn btn-success float-right">
            </div>
        </div>
    </form>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @{
        await Html.RenderPartialAsync("_Summernote", new { height = 200, selector = "#Description" });
    }

    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link href="~/lib/multiple-select/multiple-select.min.css" rel="stylesheet" />
    <script>
        $("#select-category").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });
    </script>


    <script>
        // Lấy thẻ input
        const inputElement = document.getElementById('iconFile');
        // Xác định các đuôi file hợp lệ
        const validExtensions = ['png'];

        // Xử lý sự kiện khi người dùng chọn file
        inputElement.addEventListener('change', (event) => {
            const file = event.target.files[0];
            const fileName = file.name;
            const fileExtension = fileName.split('.').pop().toLowerCase();

            // Kiểm tra xem đuôi file có hợp lệ hay không
            if (!validExtensions.includes(fileExtension)) {
                alert('Invalid file extension. Please select a file with the .png extension');
                inputElement.value = '';
            }
        });



        $(function () {
            // Multiple images preview in browser
            var imagesPreview = function (input, placeToInsertImagePreview) {

                $(placeToInsertImagePreview).empty()

                if (input.files) {
                    var filesAmount = input.files.length;

                    for (i = 0; i < filesAmount; i++) {
                        var reader = new FileReader(); console.log(input.files[i])

                        reader.onload = function (event) {
                            $($.parseHTML(`
                                            <div class="holder">
                                                <img class="imgPreview" src="${event.target.result}" alt="pic" />
                                            </div>
                                        `)).appendTo(placeToInsertImagePreview)
                        }
                        reader.readAsDataURL(input.files[i]);
                    }
                }

            };

            $('#iconFile').on('change', function () {
                imagesPreview(this, 'div.gallery');
            });
        });

    </script>
}
