    <script>
        $(function () {
            const table = $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            })
            table.buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

            console.log(table)

            $("#btnOK").on('click', () => {
                console.log('bấm rồi')
                submit()
            })

            function submit() {
                const kieu = $("#type").val()
                const base = $('#base').val()
                let data = {
                    time: kieu,
                    type: $("input[name=type]:checked").val(),
                    baseAs: base,
                    //baseId: $('#input-id').val()
                }

                if(base === 'staff'){
                    data.baseId = $('#input-staff-id').val()
                }
                else if(base === 'warehouse'){
                    data.baseId = $('#input-warehouse-id').val()
                }
               

                if (kieu === 't') {
                    data = { ...data, from: $("input[name=from]").val(), to: $("input[name=to]").val() }
                }


                console.log('dữ liệu gửi đi', data)

                let dataShow = []

                $.ajax({
                    url: '/api/receipts/statistic',
                    type: 'post',
                    data: data
                }).done((res) => {
                    console.log('Kết quả trả về: ', res)

                    Date.prototype.formatMMDDYYYY = function () {
                        return (this.getMonth() + 1) +
                            "/" + this.getDate() +
                            "/" + this.getFullYear();
                    }

                    const datarows = res.map(i => {
                        let type = '';

                        let quantity = 0;
                        i.receiptDetails.forEach(rd => {
                            quantity += rd.quantity
                        })


                        if (i.type === 1)
                            type = 'Import'
                        else if (i.type === 0)
                            type = 'Export'
                        else
                            type = 'Transfer'

                        return [
                            `<a href="/Receipts/Details/${i.id}">${i.id}</a>`,
                            `<a href="/Staffs/Details/${i.staffId}">${i.staffId}</a>`,
                            `<a href="/Warehouses/Details/${i.wareHouseId}">${i.wareHouseId}</a>`,
                            type,
                            quantity,
                            (new Date(i.dateCreated)).formatMMDDYYYY()
                        ]
                    })
                    console.log(datarows)

                    table.clear()

                    // Thêm dữ liệu vào bảng
                    table.rows.add(datarows).draw();
                })
            }

            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
