@using QuanLyKho.Models.Entities;
@{
    ViewBag.title = "Product statistic";
    ViewData["page"] = "Product statistic";
    ViewData["PrimaryTitle"] = "Product statistic";
}

@section Styles{
    <link rel="stylesheet" href="~/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/admin/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">


}



<div class="card">
    <div class="card-header">
        <p class="card-title">Statistic</p>
    </div>
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-lg-6">
                <select id="type" name="type" class="form-control p-2" aria-label="Default select example">
                    <option selected>Choose the statistic type</option>
                    <option value="d">Today</option>
                    <option value="w">This week</option>
                    <option value="m">This month</option>
                    <option value="q">This Quarter</option>
                    <option value="t">Other</option>
                </select>
            </div>

            <div class="col-lg-6 mt-2 pl-5 row">
                <div class="col form-group custom-control custom-radio">
                    <input type="radio" name="type" id="inlineRadio1" value="all" checked class="custom-control-input custom-control-input-danger">
                    <label for="inlineRadio1" class="custom-control-label">All</label>
                </div>
                <div class="col form-group custom-control custom-radio">
                    <input type="radio" name="type" id="inlineRadio2" value="direct" class="custom-control-input custom-control-input-success">
                    <label for="inlineRadio2" class="custom-control-label">Direct</label>
                </div>
                <div class="col form-group custom-control custom-radio">
                    <input type="radio" name="type" id="inlineRadio3" value="cod" class="custom-control-input custom-control-input-primary">
                    <label for="inlineRadio3" class="custom-control-label">COD</label>
                </div>
                <div class="col form-group custom-control custom-radio">
                    <input type="radio" name="type" id="inlineRadio4" value="vnpay" class="custom-control-input custom-control-input-warning">
                    <label for="inlineRadio4" class="custom-control-label">VnPay</label>
                </div>
            </div>

        </div>
        <div id="tuychon" class="row g-3 mb-3">
            <div class="col">
                <label for="from">From:</label>
                <input type="date" id="from" name="from" class="form-control">
            </div>
            <div class="col">
                <label class="form-label" for="to">To:</label>
                <input type="date" id="to" name="to" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <select id="base" name="type" class="form-control p-2" aria-label="Default select example">
                    <option selected disabled>Based on information of</option>
                    <option value="all">All</option>
                    <option value="staff">Staff</option>
                    <option value="warehouse">Store</option>
                    <option value="customer">Customer</option>
                    <option value="product">Product</option>
                </select>
            </div>
            <div class="col-lg-6">
                @*<input id="input-id" type="text" placeholder="ID" class="form-control" style="display:none" />*@
                @if (ViewBag.Warehouses != null)
                {
                    <select id="input-warehouse-id" class="form-control" style="display:none">
                        <option>Select store</option>
                        @foreach (WareHouse wareHouse in ViewBag.Warehouses)
                        {
                            <option value="@wareHouse.Id">@wareHouse.Name</option>
                        }
                    </select>
                }
                @if (ViewBag.Staff != null)
                {

                    <select id="input-staff-id" class="form-control w-100 " style="display: none">
                        <option selected disabled>Select staff</option>
                        @foreach (Staff staff in ViewBag.Staff)
                        {
                            <option value="@staff.Id">@staff.Name</option>
                        }
                    </select>

                }
                @if (ViewBag.Customers != null)
                {

                    <select id="input-customer-id" class="form-control w-100 " style="display: none">
                        <option selected disabled>Select customer</option>
                        @foreach (Customer customer in ViewBag.Customers)
                        {
                            <option value="@customer.Id">@customer.Name</option>
                        }
                    </select>

                }
                @if (ViewBag.Products != null)
                {

                    <select id="input-product-id" class="form-control w-100 " style="display: none">
                        <option selected disabled>Select product</option>
                        @foreach (Product product in ViewBag.Products)
                        {
                            <option value="@product.Id">@product.Name</option>
                        }
                    </select>

                }
            </div>
        </div>
        <div class="row">
            <button id="btnOK" class="btn btn-sm btn-primary ml-2 my-2">Statistic</button>
        </div>

        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Customer</th>
                    <th>Sale staff</th>
                    <th>Store</th>
                    <th>Total(VNĐ)</th>
                    <th>Payment status</th>
                    <th>Payment method</th>
                    <th>Ship status</th>
                    <th>DateCreated</th>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


