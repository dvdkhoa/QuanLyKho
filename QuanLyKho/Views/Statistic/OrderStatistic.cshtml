                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            })
            table.buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

            console.log(table)

            $("#btnOK").on('click', () => {
                console.log('bấm rồi')
                submit()
            })

            function submit() {
                const kieu = $("#type").val()
                const base = $('#base').val()
                let data = {
                    time: kieu,
                    type: $("input[name=type]:checked").val(),
                    baseAs: base,
                    //baseId: $('#input-id').val()
                }

                if (base === 'staff') {
                    data.baseId = $('#input-staff-id').val()
                }
                else if (base === 'warehouse') {
                    data.baseId = $('#input-warehouse-id').val()
                }
                else if (base === 'customer') {
                    data.baseId = $('#input-customer-id').val()
                }
                else if (base === 'product') {
                    data.baseId = $('#input-product-id').val()
                }


                if (kieu === 't') {
                    data = { ...data, from: $("input[name=from]").val(), to: $("input[name=to]").val() }
                }


                console.log('dữ liệu gửi đi', data)

                let dataShow = []

                $.ajax({
                    url: '/api/statistic/orderstatistic',
                    type: 'post',
                    data: data
                }).done((res) => {
                    console.log('Kết quả trả về: ', res)

                    Date.prototype.formatMMDDYYYY = function () {
                        return this.getDate() + "/" +
                            (this.getMonth() + 1) +
                            "/" + this.getFullYear();
                    }

                    const datarows = res.map(i => {

                        const customer = i.customerId ? `<a href="/Customers/Details/${i.customerId}">${i.customerName}(${i.customerId})</a>` : i.customerName;

                        const store = i.storeId ? `<a href="/Warehouses/Details/${i.storeId}">${i.store.name}(${i.storeId})</a>` : '';

                        return [
                            `<a href="/Orders/Details/${i.id}">${i.id}</a>`,
                            customer,
                            i.staffId ? `<a href="/Staffs/Details/${i.staffId}">${i.staff.name}(${i.staffId})</a>`  : '',
                            store,
                            i.total.toString().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,"),
                            i.paymentStatus,
                            i.paymentMethod,
                            i.shipStatus,
                            (new Date(i.createdTime)).formatMMDDYYYY()
                        ]
                    })
                    console.log(datarows)

                    table.clear()

                    // Thêm dữ liệu vào bảng
                    table.rows.add(datarows).draw();
                })
            }

            $('#example2').DataTable({
