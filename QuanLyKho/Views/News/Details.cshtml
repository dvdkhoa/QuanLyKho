@model QuanLyKho.Models.Entities.New

@{
    ViewData["Title"] = "Details";
    ViewData["PrimaryTitle"] = "News";

}

@section Styles {
    <link rel="stylesheet" href="~/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

}

<div class="card">
    <div class="card-header">
        <h5 class="font-weight-bold">New details:</h5>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <td>Id</td>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <td>Title</td>
                    <td>@Model.Title</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td>Icon</td>
                    <td>
                        <img src="@Model.Image" width="32px" />
                    </td>
                </tr>
                <tr>
                    <td>Content</td>
                    <td>@Html.Raw(Model.Content)</td>
                </tr>
                <tr>
                    <td>Status</td>
                    <td>@Model.Status</td>
                </tr>
                <tr>
                    <td>Created time</td>
                    <td>@Model.CreatedTime.ToShortDateString()</td>
                </tr>
                <tr>
                    <td>Last updated</td>
                    <td>@Model.LastUpdated.ToShortDateString()</td>
                </tr>
            </tbody>
        </table>
        <hr />

        <div>
            <a class="btn btn-link" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a class="btn btn-link" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
