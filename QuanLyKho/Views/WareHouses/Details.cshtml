@model QuanLyKho.Models.Entities.WareHouse
@using QuanLyKho.Extensions
@{
    ViewData["Title"] = "Details";

    var productWarehouses = Model.ProductWareHouses;
}
<div class="card">
    <div class="card-header">
        <h4>Warehouse details:</h4>
    </div>
    <div class="card-body">
        <table class="table table-stripped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>PhoneNumber</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Name</td>
                    <td>@Model.PhoneNumber</td>
                    <td>@Model.Address</td>
                </tr>
            </tbody>
        </table>
        <hr />
        @if (productWarehouses != null && productWarehouses.Count > 0)
        {
            <table id="table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Price(VNĐ)</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in productWarehouses)
                    {
                        <tr>
                            <td>@item.Product.Id</td>
                            <td>
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Product.Id">@item.Product.Name</a>
                            </td>
                            <td class="font-weight-bold">@(Helpers.PriceToVND(item.Product.Price))</td>
                            <td>@item.Quantity</td>
                            <td>@item.Product.Unit</td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
            }
            
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

