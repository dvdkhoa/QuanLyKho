@model QuanLyKho.Models.Entities.Promotion
@using QuanLyKho.Models.Entities;

@{
    ViewData["Title"] = "Edit";
}


<section class="content">
    <form asp-action="Edit" method="post">
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit promotion</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="display: block;">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedTime" />

                        <div class="form-group">
                            <label asp-for="Name">Promotion Name</label>
                            <input asp-for="Name" type="text" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Promotion Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PromotionType">Promotion type</label>
                            <select asp-for="PromotionType" class="form-control custom-select" disabled>
                                <option selected="" disabled="">Select one</option>
                                @foreach (PromotionType type in Enum.GetValues(typeof(PromotionType)))
                                {
                                    <option value="@type">@type.ToString()</option>
                                }
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group" id="percentInputForm">
                            <label asp-for="Percent">Percent</label>
                            <input asp-for="Percent" class="form-control">
                            <span asp-validation-for="Percent" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate">Start date</label>
                            <input asp-for="StartDate" class="form-control" type="date">
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate">End date</label>
                            <input asp-for="EndDate" class="form-control" type="date">
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status">Status</label>
                            <select asp-for="Status" class="form-control custom-select">
                                <option selected="" disabled="">Select one</option>
                                @foreach (Status status in Enum.GetValues(typeof(Status)))
                                {
                                    <option value="@status">@status.ToString()</option>
                                }
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

        </div>
        <div class="row pb-3">
            <div class="col-md-8 offset-2">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Update" class="btn btn-success float-right">
            </div>
        </div>
    </form>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("_Summernote", new { height = 200, selector = "#Description" });
    }

    <script>
        $("#Percent").prop("disabled", true)
        $('#PromotionType').on('change', function () {
            if (this.value === 'Gift') {
                $("#Percent").prop("disabled", true)
            } else {
                $("#Percent").prop("disabled", false)

            }
        })
    </script>
}
