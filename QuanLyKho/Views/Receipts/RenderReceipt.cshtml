@model QuanLyKho.Models.Entities.Receipt
@using QuanLyKho.Extensions
@using QuanLyKho.Models.Entities;
@{
    Layout = null;
    var title = Model.Type == ReceiptType.Transfer ? "Transfer receipt" : Model.Type == ReceiptType.Import ? "Import receipt" : "Export receipt";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <!-- <link rel="stylesheet" href="style.css"> -->
</head>
<body>
    <div class="container-fluid pt-5">
        <div id="print" class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card ">
                    <div class="card-header text-center">
                        <h1 class="card-title">@title</h1>
                        <p class="card-subtitle mb-2 text-muted">DateCreated: @Model.DateCreated.ToShortDateString()</p>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr class="text-center">
                                <td>Receipt creator<p>(Sign and write full name)</p></td>
                                <td>Shipper<p>(Sign and write full name)</p></td>
                                <td>Storekeeper<p>(Sign and write full name)</p></td>
                                <td>Accountant<p>(Sign and write full name)</p></td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <p style="height: 100px"></p>
                                </td>
                                <td>
                                    <p style="height: 100px"></p>
                                </td>
                                <td>
                                    <p style="height: 100px"></p>
                                </td>
                                <td>
                                    <p style="height: 100px"></p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="card-body">
                        <div class="d-flex flex-column justify-content-between">
                            <h2>Warehouse: @Model.WareHouse?.Name</h2>
                            @if (Model.Type == ReceiptType.Transfer)
                            {
                                <h2>Destination warehouse: @Model.DestinationWarehouse?.Name</h2>
                            }
                        </div>
                        <table class="table mt-3">
                          
                                <tr>
                                    <th>Product id</th>
                                    <th>Product name</th>
                                    <th>Quantity</th>
                                    <th>Price(vnd)</th>
                                    <th>Amount(vnd)</th>
                                </tr>
                            <tbody>
                                @foreach (var detail in Model.ReceiptDetails)
                                {
                                    <tr>
                                        <td>@detail.ProductId</td>
                                        <td>@detail.Product.Name</td>
                                        <td class="font-weight-bold">@detail.Quantity</td>
                                        <td class="font-weight-bold">@Helpers.PriceToVND(detail.Product.Price)</td>
                                        <td class="font-weight-bold">@detail.getAmountToVND()</td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="4" class="text-right font-weight-bold">Total:</td>
                                    <td class="font-weight-bold">@(Model.getTotalPrice()) vnd</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>

