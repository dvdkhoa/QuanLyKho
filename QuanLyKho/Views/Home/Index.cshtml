                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.promotions</h3>

                        <p>Promotions are being applied</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-pricetags"></i>
                    </div>
                    <a asp-action="Index" asp-controller="Promotions" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
