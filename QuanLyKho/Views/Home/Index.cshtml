        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3>@ViewBag.newOrders</h3>

                        <p>New Orders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-plus-outline"></i>
                    </div>
                    <a asp-action="Index" asp-controller="Orders" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-secondary">
                    <div class="inner">
                        <h3>@ViewBag.shippingOrders</h3>

                        <p>Shipping orders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-android-bicycle"></i>
                    </div>
                    <a asp-action="Index" asp-controller="Orders" asp-route-filter="BeingShipped" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.successOrders</h3>

                        <p>Successful orders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-checkmark-outline"></i>
                    </div>
                    <a asp-action="Index" asp-controller="Orders" asp-route-filter="Success" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.failOrders</h3>

                        <p>Canceled orders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-close-outline"></i>
                    </div>
                    <a asp-action="Index" asp-controller="Orders" asp-route-filter="Canceled" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
