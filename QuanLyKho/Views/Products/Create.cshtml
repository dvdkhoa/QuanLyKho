@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
   
            $(function () {
                // Multiple images preview in browser
                var imagesPreview = function (input, placeToInsertImagePreview) {

                    if (input.files) {
                        var filesAmount = input.files.length;

                        for (i = 0; i < filesAmount; i++) {
                        var reader = new FileReader(); console.log(input.files[i])

                            reader.onload = function (event) {
                                $($.parseHTML(`
                                    <div class="holder">
                                        <img class="imgPreview" src="${event.target.result}" alt="pic" />
                                    </div>
                                `)).appendTo(placeToInsertImagePreview)
                            }
                            reader.readAsDataURL(input.files[i]);
                        }
                    }

                };

                $('#inputImages').on('change', function () {
                    imagesPreview(this, 'div.gallery');
                });
            });
    </script>


    @await Html.PartialAsync("_Summernote", new {height = 200, selector = "#Product_Description"})
    @await Html.PartialAsync("_Summernote", new {height = 200, selector = "#Category_Description"})


    <script src="~/admin/plugins/sweetalert2/sweetalert2.min.js"></script>

    
        @if(!string.IsNullOrEmpty(notify))
        {
        <text>
            <script>
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                const notify = '@notify';
                if (notify.startsWith("Error")){
                    Toast.fire({
                        icon: 'error',
                        //title: 'Something went wrong.'
                        title: notify
                    })
                }
                else{
                    console.log("success")
                    Toast.fire({
                        icon: 'success',
                        //title: 'Something went wrong.'
                        title: notify
                    })
                }
                
            </script>
        </text>
        }

    <script>
        // Lấy thẻ input
        const inputElement = document.getElementById('iconFile');
        // Xác định các đuôi file hợp lệ
        const validExtensions = ['png'];

        // Xử lý sự kiện khi người dùng chọn file
        inputElement.addEventListener('change', (event) => {
            const file = event.target.files[0];
            const fileName = file.name;
            const fileExtension = fileName.split('.').pop().toLowerCase();

            // Kiểm tra xem đuôi file có hợp lệ hay không
            if (!validExtensions.includes(fileExtension)) {
                alert('Invalid file extension. Please select a file with the .png extension');
                inputElement.value = '';
            }
        });



        $(function () {
            // Multiple images preview in browser
            var imagesPreview = function (input, placeToInsertImagePreview) {

                $(placeToInsertImagePreview).empty()

                if (input.files) {
                    var filesAmount = input.files.length;

                    for (i = 0; i < filesAmount; i++) {
                        var reader = new FileReader(); console.log(input.files[i])

                        reader.onload = function (event) {
                            $($.parseHTML(`
                                            <div class="holder">
                                                <img class="imgPreview" src="${event.target.result}" alt="pic" />
                                            </div>
                                        `)).appendTo(placeToInsertImagePreview)
                        }
                        reader.readAsDataURL(input.files[i]);
                    }
                }

            };

            $('#iconFile').on('change', function () {
                imagesPreview(this, 'div.gallery');
            });
        });

    </script>
}
