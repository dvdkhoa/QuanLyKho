@section Styles {
    <link rel="stylesheet" href="~/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}


<!-- /.card -->
<div class="card">
    <div class="card-header">
        <a class="card-title" asp-action="Create" asp-controller="Products">Add product</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Unit)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cate in Model)
                {
                    <tr>
                        <td>@cate.Id</td>
                        <td>@cate.Name</td>
                        <td>@cate.Price</td>
                        <td>@cate.Unit</td>
                        <td>@cate.Status</td>
                        <td class="text-center">
                            <a class="btn-sm btn-primary" asp-action="Details" asp-route-id="@cate.Id"><i class="fas fa-info-circle"></i></a>
                            <a class="btn-sm btn-secondary" asp-action="Edit" asp-route-id="@cate.Id"><i class="fas fa-tools"></i></a>
                            <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@cate.Id"><i class="fas fa-trash"></i></a>

                            @*<a class="btn-sm btn-danger" data-toggle="modal" data-target="#modal-sm"><i class="fas fa-trash"></i></a>*@
                        </td>
                    </tr>
                }
            </tbody>
           
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

<div class="modal fade" id="modal-sm" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Alert</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Change status category ?</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger">OK</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

