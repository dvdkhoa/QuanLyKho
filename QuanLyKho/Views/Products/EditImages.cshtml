@model IEnumerable<QuanLyKho.Models.Entities.ProductImage>

@{
    ViewData["Title"] = "EditImages";
}

@section Styles {
    <link rel="stylesheet" href="~/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/admin/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
}


<div class="content mx-2 pb-4">
    <div class="d-flex justify-content-between "> 
        <p>
            <a asp-action="AddImages" asp-route-id="@ViewBag.productId">Add image</a>
        </p>
    </div>
    <table class="table" id="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>
                    @Html.DisplayNameFor(model => model.Order)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastUpdated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Path" height="70">
                    </td>
                    <td>
                        <input class="InputOrder" type="number" value="@item.Order" style="width: 40px" data-product_image_id="@item.Id" data-productId="@item.ProductId">
                        <button class="btn-sm btn-success d-none btn-update-image"><i class="fa-solid fa-check"></i></button>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @item.CreatedTime.ToShortDateString()
                    </td>
                    <td>
                        @item.LastUpdated.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a  class="btn-sm btn-danger btn-delete" >
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <!-- DataTables  & Plugins -->
    <script src="~/admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>

    <script src="~/admin/plugins/sweetalert2/sweetalert2.min.js"></script>


    <script>
        $(function () {
            
            $('#table').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "pageLength": 5
            });
        });

    </script>

    <script>

        const btnUpdate = $('.btn-update-image')

        btnUpdate.on('click', function(){
            const value = $(this).prev().val()
            const productId = $(this).prev().data('productid')
            const productImageId = $(this).prev().data('product_image_id')


            $.ajax({
                type: 'POST',
                url: '/Products/ChangeOrder',
                data: {
                    productImageId,
                    productId,
                    order: value
                },
                success: function (data) {
                    console.log('done ', data)
                }
            })
        })


        const inputOrder = $('.InputOrder')

        inputOrder.change(function(){
            const data = $(this).data('id')
            const value = $(this).val()

            const btnUpdate = $(this).next();

            btnUpdate.removeClass('d-none')
        })

    </script>
    <script>
        $('.btn-delete').click(function () {

            var clickedBtnID = $(this).attr('data-id');

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        //url: `products/delete/${clickedBtnID}`,
                        method: 'post'
                    }).done(() => {

                        var tr = $(this).parents('tr');
                        tr.remove()

                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        )
                    }).fail(() => {
                        Toast.fire({
                            icon: 'error',
                            title: 'Something went wrong.'
                        })
                    })


                }
            })
        })
    </script>
}
