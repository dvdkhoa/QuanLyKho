@model IEnumerable<QuanLyKho.Models.Entities.DetailedConfig>

@{
    ViewData["Title"] = "Index";
    ViewData["PrimaryTitle"] = "Detail Configurations";
}


@section Styles {
    <link rel="stylesheet" href="~/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/admin/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">

}



<!-- /.card -->
<div class="card">
    <div class="card-header">
        <a class="card-title" asp-action="Create">Add detail configuration</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if(Model != null)
                {
                    @foreach (var cate in Model)
                    {
                        <tr>
                            <td>@cate.Id</td>
                            <td>@cate.Name</td>
                            <td>@cate.Status</td>
                            <td class="text-center">
                                <a class="btn-sm btn-primary" asp-action="Details" asp-route-id="@cate.Id"><i class="fas fa-info-circle"></i></a>
                                <a class="btn-sm btn-secondary" asp-action="Edit" asp-route-id="@cate.Id"><i class="fas fa-tools"></i></a>
                                <a style="cursor: pointer" class="btn-sm btn-danger btn-delete" data-id="@cate.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
@section Scripts {

    <!-- DataTables  & Plugins -->
    <script src="~/admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/jszip/jszip.min.js"></script>
    <script src="~/admin/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/admin/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>


    <script src="~/admin/plugins/sweetalert2/sweetalert2.min.js"></script>

    <script>
        var table = {}
        $(function () {
            table = $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            });

            table.buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });

        var Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000
        });

        console.log($('.btn-delete'))
        $('.btn-delete').click(function () {


            var clickedBtnID = $(this).attr('data-id');


            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        url: `detailconfiguration/delete/${clickedBtnID}`,
                        method: 'post'
                    }).done(() => {

                        var tr = $(this).parents('tr');

                        table.row(tr).remove().draw();

                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        )
                    }).fail((error) => {
                        console.log('error: ', error)
                        Toast.fire({
                            icon: 'error',
                            //title: 'Something went wrong.'
                            title: error.responseText !== '' ? error.responseText : 'Something went wrong.'
                        })
                    })


                }
            })
        })
    </script>

}

