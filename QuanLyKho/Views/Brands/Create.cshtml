@model QuanLyKho.Models.Entities.Brand
@using QuanLyKho.Models.Entities;


@{
    ViewData["Title"] = "Create";
    ViewData["PrimaryTitle"] = "Brands";
}

@section Styles{
    <!-- Select2 -->
    <link rel="stylesheet" href="~/admin/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/admin/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
}



<section class="content pb-3">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add brand</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="display: block;">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" type="text" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Category</label>
                            <select id="select-category" class="w-100 select2bs4" name="categories" asp-items="@ViewBag.CategoryId" multiple="multiple">
                                    
                            </select>
                        </div>

                        <div class="input-group mb-3 mt-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupFileAddon01">Image</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="img-staff" name="newThumbnail" aria-describedby="inputGroupFileAddon01">
                                <label class="custom-file-label" for="img-staff">Choose file</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <img id="img-review" src="#" class="h-25 w-25" style="display: none" />
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

        </div>
        <div class="">
            <div class="col-md-8 offset-2">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Add" class="btn btn-success float-right">
            </div>
        </div>
    </form>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

       @* <script src="~/lib/multiple-select/multiple-select.min.js"></script>
        <link href="~/lib/multiple-select/multiple-select.min.css" rel="stylesheet" />*@

    <script src="~/admin/plugins/select2/js/select2.full.min.js"></script>

    <script>
            
        $('#select-category').select2({
            theme: 'bootstrap4'
        })
    </script>

    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#img-review').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
                $('#img-review').show(1000)
            }
        }

        $('#img-staff').on('change', function () {

            const file = this.files[0];

            if (file != null) {
                const fileType = file['type'];
                const validImageTypes = ['image/gif', 'image/jpeg', 'image/png'];


                if (!validImageTypes.includes(fileType)) {

                    alert('Please submit image')

                    $(this).next('.custom-file-label').html('Choose file');
                    $('#img-review').hide(1000)

                    return;
                }

                //get the file name
                var fileName = $(this).val();
                //replace the "Choose a file" label
                $(this).next('.custom-file-label').html(fileName);
                readURL(this)
            }
            else {
                $(this).next('.custom-file-label').html('Choose file');
                $('#img-review').hide(1000)
            }
        })
    </script>
}