@page "/admin/role/edit-role/{roleId}"
@model QuanLyKho.Areas.Admin.Pages.Role.EditModel
@{
    ViewData["title"] = "Update role";
    ViewData["PrimaryTitle"] = "Roles";

}

<section class="content">
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add banner</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="display: block;">
                    <form asp-page="Edit" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label class="control-label">Role name</label>
                            <input class="form-control" asp-for="@Model.Input.RoleName" />
                        </div>
                        <div class="form-group">
                            <a asp-page="Index" class="btn btn-link">Back to list roles</a>
                            <input class="btn btn-primary btn-sm float-right" type="submit" value="Update" />
                        </div>
                    </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
</section>

