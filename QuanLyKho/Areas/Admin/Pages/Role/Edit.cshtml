@page "/admin/role/edit-role/{roleId}"
@model QuanLyKho.Areas.Admin.Pages.Role.EditModel
@{
    ViewData["title"] = "Sửa thông tin vai trò";
}


<div class="row">
    <div class="col-1"></div>
    <div class="col-6">
        <h2>@ViewData["title"]</h2>
        <hr />
        <form asp-page="Edit" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="control-label">Tên vai trò</label>
                <input class="form-control" asp-for="@Model.Input.RoleName" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-sm float-right" type="submit" value="Lưu" />
            </div>
        </form>
        <a asp-page="Index">Trở về danh sách vai trò</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}