@page "/admin/role/create-role"
@model QuanLyKho.Areas.Admin.Pages.Role.CreateModel
@{
    ViewData["title"] = "Tạo thêm vai trò";
}


<div class="row">
    <div class="col-2">

    </div>
    <div class="col-6">
        <h2>@ViewData["title"]</h2>
        <hr />
        <form asp-page="Create" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(m => m.Input.RoleName)</label>
                <input class="form-control" asp-for="@Model.Input.RoleName" />
            </div>
            <div class="form-group">
                <input class="btn btn-success btn-sm float-right" type="submit" value="Thêm" />
            </div>
        </form>
        <a asp-page="Index">Trở về danh sách vai trò</a>
    </div>
    <div class="col-6">

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}