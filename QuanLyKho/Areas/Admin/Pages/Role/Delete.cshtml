@page "/admin/role/delete-role/{roleId}"
@model QuanLyKho.Areas.Admin.Pages.Role.DeleteModel
@{
    ViewData["title"] = "Delete role";
    ViewData["PrimaryTitle"] = "Roles";

}
<div class="col-xl-8 offset-xl-1 p-5">
    <h3>Are you want to delete role: <span class="font-weight-bold">@Model.Role.Name ?</span></h3>
    <div class="d-flex justify-content-between">
        <div>
            <a asp-page="./Index">Back to list</a>
        </div>
        <form method="post">
            <input class="btn btn-danger btn-sm" type="submit" value="Yes" />
        </form>
    </div>
    <hr />
    
</div>


